#include<stdio.h>
#include<math.h>
#include<iostream>

double calculo_campo_x( double x0, double y0, double X[], double Y[], double Q[], int N);



 double calculo_campo_y( double x0, double y0, double X[], double Y[], double Q[], int N);



int main ()
{
	int N,numLineas, i;
	double Q[100], X[100], Y[100];
	double x0,y0;
	 double Ex, Ey;
	
	printf("Ingrese el numero de cargas (menor o igual a 100):\n");
	scanf("%i",&N);
	
	printf("Ingrese el valor de cada carga (en Coulombs).\n");	
	for (i=0;i<N;i++){
		printf("Carga %i = ",i+1);
		scanf("%lf",&Q[i]);
		printf("\n");
	}
	
	printf("Ingrese la coordenada en x para:\n");
	for (i=0;i<N;i++){
		printf("Carga %i: ",i+1);
		scanf("%lf",&X[i]);
		printf("\n");
	}
	
	printf("Ingrese la coordenada en y para:\n");
	for (i=0;i<N;i++){
		printf("Carga %i: ",i+1);
		scanf("%lf",&Y[i]);
		printf("\n");
	}

	printf("Cuantas lineas desea dibujar?\n");
	scanf("%i",&numLineas);
	
	printf("Ingrese la coordenada en x del punto de referencia:");
	scanf("%f",&x0);
	
	printf("Ingrese la coordenada en y del punto de referencia:");
	scanf("%f",&y0);
	

		printf("Aquí están los campos :p Ex= %f y Ey= %f", calculo_campo_x( x0, y0, X, Y, Q, N), calculo_campo_y( x0, y0, X, Y, Q, N) );
		
	
}




 double calculo_campo_x( double x0, double y0, double X[], double Y[], double Q[], int N)
{
	int i;
	double xi,yi;
	long double r3;
 double Ex, Ey;
	Ex = 0.0 ;
	for(i=0; i<N ; i++)
	
	{
	xi = x0 - X[i]; // Es la distancia entre el punto inicial y la carga en x
	yi = y0 -Y[i];  // Es la distancia entre el punto unicial y la carga en y
	r3 = pow(xi*xi + yi*yi, -1.5); /* Es la parte del denominador de la formula del campo*/ 
	Ex = Ex + Q[i]*xi*r3;		
	}
	return Ex;
}

 double calculo_campo_y( double x0, double y0, double X[], double Y[], double Q[], int N)
{
	int i;
	double yi, xi;
	long double r3;
	 double Ex, Ey;
	Ey = 0.0;
	for(i=0; i<N ; i++)
	
	{
	xi = x0 - X[i];	
	yi = y0 -Y[i];  // Es la distancia entre el punto unicial y la carga en y
	r3 = pow(xi*xi + yi*yi, -1.5); /* Es la parte del denominador de la formula del campo*/ 
	Ey = Ey + Q[i]*yi*r3;		
	}
	return Ey;
}


